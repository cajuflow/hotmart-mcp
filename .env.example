# Credenciais Hotmart (OBRIGATÓRIO)
# Obtenha em: Hotmart > Gerenciar negócio > Produtos > Ferramentas > Credenciais Hotmart
HOTMART_CLIENT_ID=seu_client_id_aqui
HOTMART_CLIENT_SECRET=seu_client_secret_aqui  
HOTMART_BASIC_TOKEN=seu_basic_token_aqui

# Ambiente Hotmart
# Opções: sandbox, production
HOTMART_ENVIRONMENT=sandbox

# Configuração do Servidor MCP
# Opções: stdio (Claude Desktop), sse (aplicações web)
TRANSPORT_TYPE=stdio

# Host e Porta do MCP Server (para SSE transport)
MCP_HOST=0.0.0.0
MCP_PORT=8000

# Configurações Opcionais
HOTMART_TIMEOUT=30
HOTMART_MAX_RETRIES=3
